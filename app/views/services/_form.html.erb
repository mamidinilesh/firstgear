<%= form_for(service) do |f| %>
<% if service.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

  <ul>
    <% service.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="form-horizontal">
  <div class="form-group">
    <div class="field">
      <%= f.label "Service Name" ,class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :name , :required=> true %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label "Category" ,class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <select name="service[category_id]">
          <%= @categories.each do |category| %>
          <option value="<%= category.id %>"><%= category.name %></option>
          <% end %>
        </select>
      </div>
    </div>
  </div>


  <div class="form-group">
    <div class="field">
      <%= f.label "Default Commission" ,class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :default_commission , :required=> true%>
      </div>
    </div>
  </div>



  <div class="form-group">
    <div class="field">
      <%= f.label :active ,class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.check_box :active %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class=" actions col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>
  <% end %>
