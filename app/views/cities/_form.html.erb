  <ul>
    <% service.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="form-horizontal">
  <div class="form-group">
    <div class="field">
      <%= f.label "City Name" ,class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :name , :required => true %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label "State" ,class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <select name="city[state_id]">
          <%= @states.each do |state| %>
          <option value="<%= state.id %>"><%= state.name %></option>
          <% end %>
        </select>

      </div>
    </div>
  </div>



  <div class="form-group">
    <div class="field">
      <%= f.label :active ,class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.check_box :active %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class=" actions col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>
  <% end %>
