<h1 class="center">Rate Card</h1>

<div class="form-horizontal center container">
  <div class="form-group ">
    <label class="col-sm-2" >Select Vendor :</label>
    <%= collection_select :rate_card , :rate_card_id, Vendor.order(:name), :id, :name, {:include_blank => false},{  prompt: "Select a city" , class: "col-sm-10"} %>
  </div>
  <div class="form-group center">
    <input type="button" id ="rate_card_index_filter_button" class="btn btn-md btn-primary center" value="Submit">
  </div>
</div>
<div style="height: 500px; overflow: auto" >
<table id="rate_card_index_table" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Rate Card id</th>
      <th>Vendor</th>
      <th>Vehicle</th>
      <th>Service</th>
      <th>rate</th>
      <th>active</th>
        <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @rate_cards.each do |rate_card|%>
    <tr>
      <td> <%=rate_card.id %></td>
      <td> <%= rate_card.vendor.name %></td>
      <td> <%= rate_card.vehicle.model %></td>
      <td> <%= rate_card.service.name %></td>
      <td> <%=rate_card.rate %></td>
      <td> <%=rate_card.active %></td>
        <td><%= link_to 'Edit', edit_rate_card_path(rate_card) %></td>
          <td><%= link_to 'Show', rate_card %></td>
      </tr>
      <% end %>

  </tbody>

</table>
</div>

<%= link_to 'New Rate Card', new_rate_card_path, class: "btn btn-md btn-primary"%>
