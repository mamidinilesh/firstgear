<%= form_for(rate_card) do |f| %>
<% if rate_card.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(rate_card.errors.count, "error") %> prohibited this rate_card from being saved:</h2>

  <ul>
    <% rate_card.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<div class="form-group">
  <div class="field">
    <%= f.label "Vendor" ,class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <select name="rate_card[vendor_id]">
        <%= @vendors.each do |vendor| %>
        <option value="<%= vendor.id %>"><%= vendor.name %></option>
        <% end %>
      </select>
    </div>
  </div>
</div>
<div class="form-group">
  <div class="field">
    <%= f.label "Vehicle" ,class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <select name="rate_card[vehicle_id]">
        <%= @vehicles.each do |vehicle| %>
        <option value="<%= vehicle.id %>"><%= vehicle.model %></option>
        <% end %>
      </select>
    </div>
  </div>
</div>
<div class="form-group">
  <div class="field">
    <%= f.label "Service" ,class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <select name="rate_card[service_id]">
        <%= @services.each do |service| %>
        <option value="<%= service.id %>"><%= service.name %></option>
        <% end %>
      </select>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= f.label "Rate" ,class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :commission %>
    </div>
  </div>
</div>


<div class="form-group">
  <div class="field">
    <%= f.label :active ,class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.check_box :active %>
    </div>
  </div>
</div>

<div class="form-horizontal">
  <div class="form-group">
    <div class=" actions col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>
  <% end %>
