<h1 class="center">Vendor Contract</h1>
<div class="form-horizontal center container">
  <div class="form-group ">
    <label class="col-sm-2" >Select Vendor :</label>
    <%= collection_select :vendor_contract , :vendor_contract_id, Vendor.order(:name), :id, :name, {:include_blank => false},{  prompt: "Select a Vendor" , class: "col-sm-10"} %>
  </div>
  <div class="form-group center">
    <input type="button" id ="vendor_contract_index_filter_button" class="btn btn-md btn-primary center" value="Submit">
  </div>
</div>

<div style="height: 500px; overflow: auto" >
<table id="vendor_contract_index_table" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Contract id</th>
      <th>Vendor</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Comments</th>
      <th>Listing Fees</th>
      <th>Amount Fees</th>
      <th>active</th>
        <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @vendor_contracts.each do |vendor_contract|%>
    <tr>
      <td> <%=vendor_contract.id %></td>
      <td> <%= vendor_contract.vendor.name %></td>
      <td> <%=vendor_contract.start_date %></td>
      <td> <%=vendor_contract.end_date %></td>
      <td> <%=vendor_contract.comments %></td>
      <td> <%=vendor_contract.listing_fees %></td>
      <td> <%=vendor_contract.listing_fees_paid %></td>
      <td> <%=vendor_contract.active %></td>
        <td><%= link_to 'Edit', edit_vendor_contract_path(vendor_contract) %></td>
        <td><%= link_to 'Show', vendor_contract %></td>
      </tr>
      <% end %>

  </tbody>

</table>
</div>

<%= link_to 'New Contract', new_vendor_contract_path, class: "btn btn-md btn-primary"%>
