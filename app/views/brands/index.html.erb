<h1 class="center">Brands</h1>
<div style="height: 500px; overflow: auto" >
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Brand id</th>
      <th>Brand name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @brands.each do |brand|%>
    <tr>
      <td> <%=brand.id %></td>
      <td> <%=brand.name %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td><%= link_to 'Show', brand %></td>

      </tr>
      <% end %>

  </tbody>
</table>
</div>
<%= link_to 'New Brand', new_brand_path, class: "btn btn-md btn-primary"%>
