  <ul>
    <% brand.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="form-horizontal">
  <div class="form-group">
    <%= f.label "Brand Name:" ,class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name , class: "form-control" ,:required => true%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Active:" , class: "control-label col-sm-2" %>
    <div class="col-sm-1">
      <%= f.check_box :active ,class: "form-control" %>
    </div>
    <div class="col-sm-9">
    </div>
  </div>
  <div class="form-group">
    <div class=" actions col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>
</div>
<% end %>
