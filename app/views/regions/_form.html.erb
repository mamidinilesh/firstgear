<%= form_for(region) do |f| %>
<% if region.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(region.errors.count, "error") %> prohibited this region from being saved:</h2>

  <ul>
    <% region.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="form-horizontal">
  <div class="form-group">
    <div class="field">
      <%= f.label "Region Name" ,class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :name , :required => true%>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label "City" ,class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <select name="region[city_id]">
          <%= @cities.each do |city| %>
          <option value="<%= city.id %>"><%= city.name %></option>
          <% end %>
        </select>
      </div>
    </div>
  </div>


  <div class="form-group">
    <div class="field">
      <%= f.label :active ,class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.check_box :active %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class=" actions col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>
  <% end %>
