<h1>Vehicle</h1>


<table>
  <thead>
    <tr>
      <td>Vehile name</td>
    </tr>
  </thead>
  <tbody>
    <% @vehicles.each do |vehicle|%>
    <tr>
      <td> <%=vehicle.v_type %></td>
      <td> <%= @brands.find(vehicle.brand_id).name %></td>
      <td> <%=vehicle.model %></td>
      <td> <%=vehicle.variant %></td>
      <td> <%=vehicle.transmission %></td>
      <td> <%=vehicle.active %></td>


        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
      </tr>
      <% end %>

  </tbody>

</table>
